<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kupiec.jacek.fridge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            tools:node="remove" />
        <meta-data
            android:name="android.support.VERSION"
            tools:node="remove" />

        <activity
            android:name=".ProductsViewActivity"
            android:label="@string/title_activity_view_product"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductViewActivity"
            android:label="@string/title_activity_product_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateProductActivity"
            android:label="@string/title_activity_create_product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LogInActivity"
            android:label="@string/title_activity_log_in"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>